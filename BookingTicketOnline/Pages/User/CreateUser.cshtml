@page
@model BookingTicketOnline.Pages.User.CreateUserModel
@{
    Layout = "_AdminLayout";
}

<div class="container my-5" style="max-width: 600px">
    <h2 class="text-center mb-4">Create User</h2>
    <form>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Enter username" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Enter password" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Status</label>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="status">
                <label class="form-check-label" for="status">Active</label>
            </div>
        </div>
        <div class="mb-3">
            <label for="role" class="form-label">Role</label>
            <select class="form-select" id="role" required>
                <option selected>Select role</option>
                <option value="1">Admin</option>
                <option value="2">Staff</option>
                <option value="3">User</option>
                <option value="4">Movie Theater Owner</option>
            </select>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary" asp-page="/User/ManageUsers">Save</button>
            <a type="button" class="btn btn-outline-secondary" asp-page="/User/ManageUsers">Cancel</a>
        </div>
    </form>
</div>
