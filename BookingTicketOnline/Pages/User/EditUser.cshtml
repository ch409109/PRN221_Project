@page
@model BookingTicketOnline.Pages.User.EditUserModel
@{
    Layout = "_AdminLayout";
}

<div class="container my-5" style="max-width: 600px">
    <h2 class="text-center mb-4">Modify User</h2>
    <form method="post">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input value="@Model.User.FullName" type="text" class="form-control" id="username" placeholder="Enter username" readonly>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input value="@Model.User.Email" type="text" class="form-control" id="email" placeholder="Enter password" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">Status</label>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="@Model.IsActived"/>
                <label class="form-check-label" for="status">Active</label>
            </div>
        </div>
        <div class="mb-3">
            <label for="role" class="form-label">Role</label>
            <input value="@Model.User.Role.RoleName" type="text" class="form-control" id="email" placeholder="Enter password" readonly>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <a type="button" class="btn btn-outline-secondary" asp-page="/User/ManageUsers">Cancel</a>
        </div>
    </form>
</div>
