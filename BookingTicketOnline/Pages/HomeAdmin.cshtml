@page
@model BookingTicketOnline.Pages.HomeAdminModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="StaffPage.css"> <!-- Link đến file CSS -->
</head>

<body>

    <!-- Header -->
    <header class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">CineMatic System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Home</a>
                    </li>
                    <li class="nav-item"></li>
                    <a class="nav-link " href="#">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Tiêu đề trang -->
    <div class="sticky-top bg-light py-3 shadow-sm">
        <div class="container">
            <h1 class="h4 mb-0">Admin Dashboard</h1>
        </div>
    </div>

    <!-- Nội dung trang -->
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manage Users</h5>
                        <p class="card-text">View and manage users.</p>
                        <a asp-page="User/ManageUsers" class="btn btn-primary">Go to Manage Users</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manage Film Categories</h5>
                        <p class="card-text">View and manage film categories.</p>
                        <a asp-page="/Category/ManageCategories" class="btn btn-primary">Go to Manage Film Categories</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manage Cinemas</h5>
                        <p class="card-text">View and manage cinemas.</p>
                        <a asp-page="/Cinema/ManageCinemas" class="btn btn-primary">Go to Manage Cinemas</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manage Movie Trailers</h5>
                        <p class="card-text">View and manage film trailers.</p>
                        <a href="manage_news.html" class="btn btn-primary">Go to Manage Film Trailers</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manage Movies</h5>
                        <p class="card-text">View and manage movies.</p>
                        <a asp-page="/Movie/ManageMovies" class="btn btn-primary">Go to Manage Movies</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Latest Updates</h3>
                <div class="alert alert-info" role="alert">
                    Stay tuned for new updates and features coming soon!
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

