@page
@model BookingTicketOnline.Pages.ManageShowTime.ShowtimesModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Showtimes";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>RoomName</th>
            <th>StartTime</th>
            <th>EndTime</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var showtime in Model.showtimes)
        {
            <tr>
                <td>@showtime.Id</td>
                <td>@showtime.Movie?.Title</td>
                <td>@showtime.Room?.Name</td>
                <td>@showtime.StartTime?.ToString("hh\\:mm")</td>
                <td>@showtime.EndTime?.ToString("hh\\:mm")</td>
                <td>@showtime.Date?.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
