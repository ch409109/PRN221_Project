@page
@model BookingTicketOnline.Pages.CheckOutModel
@{
    ViewData["Title"] = "Checkout";
}

<style>
    /* Giữ nguyên CSS như cũ */
    .checkout-container {
        max-width: 900px;
        margin: 0 auto;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
    }

    .step-number {
        width: 30px;
        height: 30px;
        background: #dc3545;
        color: white;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
        font-size: 14px;
    }

    .step-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }

    .price-label {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .price-value {
        font-size: 1.2rem;
        font-weight: 600;
        color: #333;
    }

    .payment-method {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        transition: all 0.3s ease;
    }

        .payment-method:hover {
            border-color: #dc3545;
            background-color: #fff9f9;
        }

        .payment-method img {
            height: 30px;
            object-fit: contain;
            margin-right: 10px;
        }

    .total-section {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
    }

    .btn-navigate {
        padding: 10px 30px;
        font-weight: 500;
    }

    .voucher-input {
        position: relative;
    }

    .btn-apply {
        position: absolute;
        right: 5px;
        top: 50%;
        transform: translateY(-50%);
        padding: 5px 15px;
    }
</style>

<div class="container py-5">
    <div class="checkout-container p-4">
        <!-- Header -->
        <h2 class="text-center mb-5 text-uppercase fw-bold">CHECKOUT</h2>

        <form method="post">
            <!-- Step 1: Voucher -->
            <div class="row mb-4">
                <div class="col-md-7">
                    <div class="step-title">
                        <span class="step-number">1</span>
                        Discount Code
                    </div>
                    <div class="voucher-input">
                        <input type="text"
                               asp-for="VoucherCode"
                               class="form-control form-control-lg"
                               placeholder="Enter your discount code">
                        <button type="submit"
                                class="btn btn-outline-danger btn-apply"
                                asp-page-handler="ApplyVoucher">
                            Apply
                        </button>
                    </div>
                    <span asp-validation-for="VoucherCode" class="text-danger"></span>
                    @if (!string.IsNullOrEmpty(ViewData["VoucherMessage"]?.ToString()))
                    {
                        <div class="alert alert-success">@ViewData["VoucherMessage"]</div>
                    }

                </div>
                <div class="col-md-5">
                    <div class="text-end">
                        <div class="price-label">Subtotal</div>
                        <div class="price-value">@Model.TotalAmount</div>
                    </div>
                </div>
            </div>

            <!-- Step 2: Payment Method -->
            <div class="row mb-4">
                <div class="col-md-7">
                    <div class="step-title">
                        <span class="step-number">2</span>
                        Payment Method
                    </div>
                    <div class="payment-method">
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   asp-for="PaymentMethod"
                                   value="VNPay"
                                   checked>
                            <label class="form-check-label d-flex align-items-center">
                                <img src="~/img/vnpaylogo.png" alt="VNPay">
                                <span class="ms-2">Pay with VNPay</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="text-end">
                        <div class="price-label">Discount</div>
                        <div class="price-value">@Model.DiscountAmount</div>
                    </div>
                </div>
            </div>

            <!-- Total Section -->
            <div class="total-section mt-4">
                <div class="row">
                    <div class="col-md-7">
                        <p class="mb-0 text-muted">Please review your information before proceeding with payment</p>
                    </div>
                    <div class="col-md-5">
                        <div class="text-end">
                            <div class="price-label">Discount</div>
                            <div class="price-value">@Model.DiscountAmount</div>
                            <div class="price-label fw-bold">Total Payment</div>
                            <div class="price-value text-danger fs-4">@Model.FinalAmount</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-page="/Foods/BookFoods" class="btn btn-outline-secondary btn-navigate">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <button type="submit"
                        class="btn btn-danger btn-navigate"
                        asp-page-handler="Checkout">
                    Proceed to Payment
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Handle voucher application
        document.querySelector('.btn-apply').addEventListener('click', function () {
            // You can add AJAX call here to validate voucher
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}