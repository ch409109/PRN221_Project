	<!-- Title -->
	<div class="bg-dark text-white p-4 text-center">
		<h1>Movie Ticket Booking History</h1>
	</div>

	<!-- Search -->
	<div class="container mt-4">
		<div class="input-group mb-4">
			<input type="text" class="form-control" placeholder="Search by movie, theater, status...">
			<button class="btn btn-outline-secondary" type="button">Search</button>
		</div>
	</div>

	<!-- Body -->
	<div class="container my-5">
		<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

			<!-- Card 1 -->
			<div class="col">
				<div class="card h-100">
					<div class="card-body">
						<h5 class="card-title">Joker: Folie à Deux</h5>
						<p class="card-text">Theater: CGV AEON Hà Đông</p>
						<p class="card-text">Booking Date: 05/09/2024</p>
						<p class="card-text">Tickets: 1 | Price: 75.000 VND</p>
						<p class="card-text"><strong>Status: Unused</strong></p>
					</div>
					<div class="card-footer d-flex justify-content-between">
						<button class="btn btn-primary btn-sm" data-bs-toggle="modal"
								data-bs-target="#ticketDetailModal1">
							View
						</button>
						<button class="btn btn-danger btn-sm">Cancel</button>
					</div>
				</div>
			</div>

			<!-- Card 2 -->
			<div class="col">
				<div class="card h-100">
					<div class="card-body">
						<h5 class="card-title">Gracie and Pedro: Pets to the Rescue</h5>
						<p class="card-text">Theater: CGV Rice City</p>
						<p class="card-text">Booking Date: 04/09/2024</p>
						<p class="card-text">Tickets: 3 | Price: 225.000 VND</p>
						<p class="card-text"><strong>Status: Canceled</strong></p>
					</div>
					<div class="card-footer d-flex justify-content-between">
						<button class="btn btn-primary btn-sm" data-bs-toggle="modal"
								data-bs-target="#ticketDetailModal2">
							View
						</button>
						<button class="btn btn-danger btn-sm">Delete</button>
					</div>
				</div>
			</div>

