@page
@model ManageRoomsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelperss
@{
    Layout = "_AdminLayout";
    var count = 1;
}
<div class="container mt-5">
    <h1 class="text-center ">@Model.Rooms[0].Cinema.Name</h1>

    <!-- Button to open Add Room Modal -->
    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addRoomModal">
        Add New Room
    </button>

    <!-- Room Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>STT</th>
                <th>Room Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.Rooms)
            {
                <tr>
                    <td>@count</td>
                    <td>@room.Name</td>
                    <td>
                        <form method="post" asp-page-handler="ManageSeat">
                            <input type="hidden" name="id" value="@room.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">Manage Room</button>
                        </form>
                    </td>
                </tr>
            }
            @{
                count += 1;
            }
        </tbody>
    </table>
</div>