@page
@model BookingTicketOnline.Pages.Movie.CreateMovieModel
@{
    Layout = "_AdminLayout";
}

<div class="container my-5" style="max-width: 600px">
    <h2 class="text-center mb-4">Create Movie</h2>

    <div asp-validation-summary="All"></div>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="@Model.movie.Title" class="form-control" placeholder="Enter title">
            <span asp-validation-for="movie.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Category</label>
            <select asp-for="movie.CategoryId" class="form-control">
                <option value="" disabled selected>Choose a category</option>
                @foreach (var category in Model.categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="movie.CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Release Date</label>
            <input type="date" asp-for="movie.ReleaseDate" class="form-control" placeholder="Enter realease date">
            <span asp-validation-for="movie.ReleaseDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Actors</label>
            <input asp-for="movie.Actor" class="form-control" placeholder="Enter actors">
            <span asp-validation-for="movie.Actor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Director</label>
            <input asp-for="movie.Director" class="form-control" placeholder="Enter director">
            <span asp-validation-for="movie.Director" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">TrailerURL</label>
            <input asp-for="movie.TrailerUrl" class="form-control" placeholder="Enter Youtube trailer">
            <span asp-validation-for="movie.ReleaseDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Duration</label>
            <div class="row">
                <div class="col">
                    <div class="input-group">
                        <input asp-for="DurationHours" class="form-control" type="number" min="0" max="23" placeholder="Hours">
                        <span class="input-group-text">hours</span>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <input asp-for="DurationMinutes" class="form-control" type="number" min="0" max="59" placeholder="Minutes">
                        <span class="input-group-text">minutes</span>
                    </div>
                </div>
            </div>
            <span asp-validation-for="movie.Duration" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Poster</label>
            <input type="file" asp-for="ImageFile" class="form-control" accept="image/*">
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="movie.Description" class="form-control" placeholder="Enter description" rows="5"></textarea>
            <span asp-validation-for="movie.Description" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <a type="button" class="btn btn-outline-secondary" asp-page="/Movie/ManageMovies">Cancel</a>
        </div>
    </form>
</div>
