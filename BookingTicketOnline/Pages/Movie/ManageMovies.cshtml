@page
@model BookingTicketOnline.Pages.Movie.ManageMoviesModel

@{
    Layout = "_AdminLayout";
}

<div class="container-fluid mb-4">
    <div class="row align-items-center justify-content-between g-3">
        <div class="col-12 col-md-auto">
            <a class="btn btn-success w-100" asp-page="/Movie/CreateMovie">
                <i class="bi bi-plus-circle me-2"></i> Add New Movie
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <form method="get" class="d-flex">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchString"
                           value="@Model.CurrentFilter" placeholder="Search by title">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="bi bi-search"></i> Search
                    </button>
                    @if (!string.IsNullOrEmpty(Model.CurrentFilter))
                    {
                        <a class="btn btn-outline-secondary" asp-page="./ManageMovies">
                            <i class="bi bi-x-circle"></i> Clear
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

<div class="d-flex flex-column flex-md-row justify-content-end flex-wrap mb-4">
    <select class="form-select me-2 mb-2 mb-md-0" style="max-width: 200px;">
        <option selected>Select category</option>
        @foreach (var category in Model.categories)
        {
            <option value="3">@category.Name</option>
        }
    </select>
</div>

<div class="table-responsive">
    @if (!Model.movies.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            @if (!string.IsNullOrEmpty(Model.CurrentFilter))
            {
                <span>No movies found matching '@Model.CurrentFilter'</span>
            }
            else
            {
                <span>No movies found</span>
            }
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Release Date</th>
                    <th>Actor</th>
                    <th>Director</th>
                    <th>Poster</th>
                    <th>Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.movies)
                {
                    <tr>
                        <td>@movie.Id</td>
                        <td>@movie.Title</td>
                        <td>@movie.Description</td>
                        <td>@movie.ReleaseDate</td>
                        <td>@movie.Actor</td>
                        <td>@movie.Director</td>
                        <td><img src="/img/@movie.Poster" alt="Inception" width="50" height="50"></td>
                        @if (movie.Status == "Active")
                        {
                            <td class="text-primary">@movie.Status</td>
                        }
                        else
                        {
                            <td class="text-danger">@movie.Status</td>
                        }
                        <td class="text-center">
                            <a asp-page="/Movie/EditMovie" asp-route-id="@movie.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-page="/Movie/DeleteMovie" asp-route-id="@movie.Id"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?pageNumber=@(Model.CurrentPage - 1)&searchString=@Model.CurrentFilter" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="?pageNumber=@i&searchString=@Model.CurrentFilter">@i</a>
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?pageNumber=@(Model.CurrentPage + 1)&searchString=@Model.CurrentFilter" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
