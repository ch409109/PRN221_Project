@page
@model BookingTicketOnline.Pages.Movie.MovieDetailsAdminModel

@{
    Layout = "_AdminLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Movie Details</h2>
                </div>

                <div class="card-body">

                    <div class="row mb-4">
                        <div class="col-12 text-center">
                            @if (!string.IsNullOrEmpty(Model.Movie.Poster))
                            {
                                <img src="~/img/@Model.Movie.Poster"
                                     class="img-fluid rounded"
                                     alt="@Model.Movie.Title"
                                     style="max-height: 300px; width: auto;">
                            }
                            else
                            {
                                <img src="~/img/default-movie.jpg"
                                     class="img-fluid rounded"
                                     alt="Default movie image"
                                     style="max-height: 300px; width: auto;">
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Title:</div>
                        <div class="col-md-8">@Model.Movie.Title</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Genre:</div>
                        <div class="col-md-8">@Model.Movie.Category?.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Release Date:</div>
                        <div class="col-md-8">@Model.Movie.ReleaseDate</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Actors:</div>
                        <div class="col-md-8">@Model.Movie.Actor</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Director:</div>
                        <div class="col-md-8">@Model.Movie.Director</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Status:</div>
                        <div class="col-md-8">
                            <span class="badge @(Model.Movie.Status == "Active" ? "bg-success" : "bg-danger")">
                                @Model.Movie.Status
                            </span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Description:</div>
                        <div class="col-md-8">@Model.Movie.Description</div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="./ManageMovies" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                        <a asp-page="./ChangeStatus" asp-route-id="@Model.Movie.Id"
                           class="btn @(Model.Movie.Status == "Active" ? "btn-danger" : "btn-success")">
                            <i class="bi @(Model.Movie.Status == "Active" ? "bi-x-circle" : "bi-check-circle") me-2"></i>
                            @(Model.Movie.Status == "Active" ? "Deactivate" : "Activate")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
