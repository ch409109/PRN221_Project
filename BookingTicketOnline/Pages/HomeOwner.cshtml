@page
@model BookingTicketOnline.Pages.HomeOwnerModel

@{
    Layout = "_MovieTheaterOwnerLayout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="StaffPage.css"> <!-- Link đến file CSS -->
</head>

<body>

    <!-- Nội dung trang -->
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Quản lý doanh thu</h5>
                        <p class="card-text">Xem và quản lý doanh thu.</p>
                        <a asp-page="ManageRevenue/Index" class="btn btn-primary">Đi đến trang quản lý doanh thu</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Quản lý suất chiếu</h5>
                        <p class="card-text">Xem và quản lý suất chiếu.</p>
                        <a asp-page="ManageShowTime/Index" class="btn btn-primary">Đi đến trang quản lý suất chiếu</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Quản lý mã giảm giá</h5>
                        <p class="card-text">Xem và quản lý mã giảm giá.</p>
                        <a asp-page="ManageDiscount/Index" class="btn btn-primary">Đi đến trang quản lý mã giảm giá</a>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

