@page
@model BookingTicketOnline.Pages.Cinema.CreateCinemaModel
@{
    Layout = "_AdminLayout";
}

<div class="container my-5" style="max-width: 600px">
    <h2 class="text-center mb-4">Create Cinema</h2>
    <form>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="username" placeholder="Enter name" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Location</label>
            <input type="text" class="form-control" id="username" placeholder="Enter location" required>
        </div>
        <div class="mb-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" id="username" placeholder="Enter city" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" id="username" placeholder="Enter phone" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" id="username" placeholder="Enter email" required>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary" asp-page="/Cinema/ManageCategories">Save</button>
            <a type="button" class="btn btn-outline-secondary" asp-page="/Cinema/ManageCategories">Cancel</a>
        </div>
    </form>
</div>
