@page
@model BookingTicketOnline.Pages.Cinema.CinemaDetailsModel
@{
    Layout = "_AdminLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Cinema Details</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Name:</div>
                        <div class="col-md-8">@Model.Cinema.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Address:</div>
                        <div class="col-md-8">@Model.Cinema.Location</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">City:</div>
                        <div class="col-md-8">@Model.Cinema.City</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Status:</div>
                        <div class="col-md-8">@Model.Cinema.Status</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Status:</div>
                        <div class="col-md-8">
                            <span class="badge @(Model.Cinema.Status == "Active" ? "bg-success" : "bg-danger")">
                                @Model.Cinema.Status
                            </span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="./ManageCinemas" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                        <a asp-page="./ChangeStatus" asp-route-id="@Model.Cinema.Id"
                           class="btn @(Model.Cinema.Status == "Active" ? "btn-danger" : "btn-success")">
                            <i class="bi @(Model.Cinema.Status == "Active" ? "bi-x-circle" : "bi-check-circle") me-2"></i>
                            @(Model.Cinema.Status == "Active" ? "Deactivate" : "Activate")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
