@page
@model BookingTicketOnline.Pages.Foods.CreateFoodsModel
@{
    Layout = "_AdminLayout";
}
<div class="container my-5" style="max-width: 600px">
    <h2 class="text-center mb-4">Create Foods</h2>
    <form enctype="multipart/form-data" method="post">

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="@Model.food.Name" class="form-control" placeholder="Enter category name">
            <span asp-validation-for="food.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Quantity</label>
            <input asp-for="food.Quantity" class="form-control" placeholder="Enter name">
            <span asp-validation-for="food.Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input asp-for="food.Price" class="form-control" placeholder="Enter price">
            <span asp-validation-for="food.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Image</label>
            <input type="file" class="form-control" asp-for="ImageFile" accept="image/*">
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-outline-secondary" asp-page="/Foods/ManageFoods">Cancel</a>
        </div>
    </form>
</div>

