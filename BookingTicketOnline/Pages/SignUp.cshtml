@page
@model BookingTicketOnline.Pages.SignUpModel
@{
    Layout = null;
}
@await Component.InvokeAsync("NToastNotify")

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form by Colorlib</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="css/sty1e.css">
</head>
<body>
    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="post" class="register-form" id="register-form">
                            <div class="form-group">
                                <label asp-for="InputUser.Username"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="InputUser.Username" placeholder="UserName"  />
                                <span asp-validation-for="InputUser.Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="InputUser.FullName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="InputUser.FullName" placeholder="FullName"  />
                                <span asp-validation-for="InputUser.FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="InputUser.Dob"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="date" asp-for="InputUser.Dob"  />
                                <span asp-validation-for="InputUser.Dob" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="InputUser.PhoneNumber"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="InputUser.PhoneNumber" placeholder="PhoneNumber"  />
                                <span asp-validation-for="InputUser.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="InputUser.Email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" asp-for="InputUser.Email" placeholder="Your Email"  />
                                <span asp-validation-for="InputUser.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="InputUser.Password"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" asp-for="InputUser.Password" placeholder="Password"  />
                                <span asp-validation-for="InputUser.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                            </div>
                        </form>

                    </div>
                    <div class="signup-image">
                        <figure><img src="img/signup-image.jpg" alt="sing up image"></figure>
                        <a href="#" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Sing in  Form -->
        

    </div>

    <!-- JS -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
