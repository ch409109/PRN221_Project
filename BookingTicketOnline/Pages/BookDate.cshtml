    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: black;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin: 0 0 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .location-select {
            position: relative;
            display: inline-block;
        }

        .location-button {
            background-color: #ff69b4; /* Màu hồng */
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

        .dropdown {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 120px;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1;
            margin-top: 5px;
            border-radius: 5px;
        }

            .dropdown div {
                padding: 10px;
                cursor: pointer;
            }

