@page
@model BookingTicketOnline.Pages.Seat.AddSeatModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	Layout = "_Layout";
}

<body>
	<div class="container my-5">
		<h2 class="text-center">Modify Seat</h2>
		<form method="post">
			<div class="mb-3">
				<label for="seatName" class="form-label">Row Name</label>
				<select class="form-select" asp-for="@Model.Seat.RowId" required>
					@foreach (var row in @Model.Rows)
					{
						<option value="@row.Id">@row.RowName</option>
					}
				</select>
			</div>
			<div class="mb-3">
				<label for="seatName" class="form-label">Seat Number</label>
				<input type="text" name="SeatNumber" class="form-control" required />
			</div>
			<div class="mb-3">
				<label for="status" class="form-label">Status</label>
				<select id="status" name="Seat.Status" class="form-select" required>
					<option value="Available">Available</option>
					<option value="Booked">Booked</option>
					<option value="Inactive">Inactive</option>
				</select>
			</div>
			<div class="text-center">
				<button type="submit" class="btn btn-primary">Save Changes</button>
				<a asp-page="/Seat/ManageSeats" class="btn btn-secondary">Cancel</a>
			</div>
		</form>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
