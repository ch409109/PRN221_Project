@page
@model BookingTicketOnline.Pages.Seat.ModifySeatModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	Layout = "_Layout";
	var roomId = HttpContext.Session.GetInt32("RoomID");
}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
	<div class="container my-5">
		<h2 class="text-center">@(Model.isEditing ? "Modify Seat" : "Add Seat")</h2>
		<form method="post" asp-page-handler="Save">

			@if (Model.isEditing)
			{
				<div class="mb-3">
					<label for="seatName" class="form-label">Seat Name</label>
					<select class="form-select" required>
						@foreach (var seat in @Model.Seats)
						{
							<option value="@seat.Id" )>@seat.SeatName</option>
						}
					</select>
				</div>
			}
			else
			{
				<label for="seatName" class="form-label">Seat Name</label>
				<input type="text" name="Seat.SeatName" class="form-control" required />
			}
			<div class="mb-3">
				<label for="status" class="form-label">Status</label>
				<select id="status" name="Seat.Status" class="form-select" required>
					<option value="Available">Available</option>
					<option value="Booked">Booked</option>
					<option value="Inactive">Inactive</option>
				</select>
			</div>
			<div class="text-center">
				<button type="submit" class="btn btn-primary">Save Changes</button>
				<a asp-page="/Seat/ManageSeats" class="btn btn-secondary">Cancel</a>
			</div>


		</form>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>