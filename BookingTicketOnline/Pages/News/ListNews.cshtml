@page
@model BookingTicketOnline.Pages.News.ListNewsModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Tin Tức</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .title {
            font-size: 36px;
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }

        .subtitle {
            font-size: 18px;
            color: #777;
            margin-bottom: 30px;
        }

        .news-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        .news-item {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            height: 300px;
            display: flex;
            flex-direction: column;
        }

            .news-item img {
                width: 100%;
                height: auto;
                display: block;
            }

        .news-content {
            padding: 15px;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .news-title {
            font-size: 18px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .news-meta {
            font-size: 14px;
            color: #777;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

            .news-meta svg {
                margin-right: 5px;
            }

        .news-desc {
            font-size: 14px;
            color: #555;
            line-height: 1.6;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        /* Icon */
        .icon {
            width: 16px;
            height: 16px;
            fill: #777;
        }

        /* NEW SECTION */
        .latest-articles {
            margin-top: 50px;
        }

        .latest-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

        /* Left column (Latest articles) */
        .latest-article-item {
            display: flex;
            margin-bottom: 20px;
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .latest-article-item img {
                width: 150px;
                height: auto;
            }

        .latest-article-content {
            padding: 15px;
            width: 100%;
        }

        .latest-article-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
        }

        .latest-article-meta {
            font-size: 14px;
            color: #777;
            margin-bottom: 10px;
        }

        .latest-article-desc {
            font-size: 14px;
            color: #555;
        }
    </style>
</head>
<body>


    <div class="container">
        <h1 class="title">Phim chiếu rạp</h1>
        <p class="subtitle">Phim chiếu rạp, bom tấn cực ấn tượng </p>

        <div class="news-grid">
            @foreach (var news in @Model.NewsList)
            {
                <div class="news-item">
                    <img src="~/img/NewsImage/@news.Image" alt="@news.Title">
                    <div class="news-content">
                        <h2 class="news-title">
                            <a asp-page="/News/NewsDetail" asp-route-id="@news.Id">@news.Title</a>
                        </h2>
                        <div class="news-meta">
                            <span>@news.CreateAt?.ToString("dd/MM/yyyy")</span>
                        </div>
                        <p class="news-desc">@Model.LimitWords(news.Content, 20)</p>
                    </div>
                </div>
            }
        </div>
    </div>


</body>
</html>
