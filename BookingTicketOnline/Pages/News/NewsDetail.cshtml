@page "{id:int}"
@model BookingTicketOnline.Pages.News.NewsDetailModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Phim Chiếu Rạp</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 0 auto;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .poster-container {
            display: flex;
            justify-content: space-around;
            margin: 20px 0;
        }

        .poster {
            width: 100%;
            height: 100&;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .movie-info {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #2c3e50;
        }

        p {
            color: #555;
            line-height: 1.6;
        }

        .movie-images {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .movie-image {
            width: 45%;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@Model.News.Title</h1>

        <div class="poster-container">
            <img src="/img/@Model.News.Image" alt="@Model.News.Title" class="poster">
        </div>

        <div class="movie-info">
            <p>@Model.News.Content</p>
        </div>
    </div>
</body>
</html>

