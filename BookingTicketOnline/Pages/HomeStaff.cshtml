@page
@model BookingTicketOnline.Pages.HomeStaffModel

@{
    Layout = "_StaffLayout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="StaffPage.css"> <!-- Link đến file CSS -->
</head>

<body>
    <!-- Nội dung trang -->
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manage Tickets</h5>
                        <p class="card-text">View and manage ticket bookings and cancellations.</p>
                        <a asp-page="/Ticket/ManageTickets" class="btn btn-primary">Go to Manage Tickets</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Manage News</h5>
                        <p class="card-text">Post and manage news updates for users.</p>
                        <a asp-page="Staff/ManageNews" class="btn btn-primary">Go to Manage News</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Latest Updates</h3>
                <div class="alert alert-info" role="alert">
                    Stay tuned for new updates and features coming soon!
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

