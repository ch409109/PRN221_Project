@page
@model BookingTicketOnline.Pages.Payment.PaymentFailedModel
@{
    ViewData["Title"] = "Payment Failed";
}

<div class="container py-5">
    <div class="card text-center">
        <div class="card-body">
            <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
            <h2 class="card-title mt-3">Thanh toán thất bại</h2>
            <p class="card-text">Rất tiếc, thanh toán của bạn không được xử lý đúng. Hãy thử lại hoặc liên hệ hỗ trợ</p>
            <a asp-page="/Seat/BookSeat" class="btn btn-primary mt-3">Thử lại</a>
        </div>
    </div>
</div>