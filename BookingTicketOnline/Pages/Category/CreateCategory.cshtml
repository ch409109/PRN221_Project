@page
@model BookingTicketOnline.Pages.Category.CreateCategoryModel
@{
    Layout = "_AdminLayout";
}
<div class="container my-5" style="max-width: 600px">
    <h2 class="text-center mb-4">Thêm thể loại phim mới</h2>
    <form method="post">
        <div class="mb-3">
            <label asp-for="category.Name" class="form-label">Thể loại</label>
            <input asp-for="category.Name" class="form-control" placeholder="Nhập thể loại phim">
            <span class="text-danger" asp-validation-for="category.Name"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a type="button" class="btn btn-outline-secondary" asp-page="/Category/ManageCategories">Thoát</a>
        </div>
    </form>
</div>
