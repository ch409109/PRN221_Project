@page
@model BookingTicketOnline.Pages.Category.DeleteCategoryModel
@{
    Layout = "_AdminLayout";
}
<div class="container my-5" style="max-width: 600px">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center mb-0">Confirm Delete</h2>
        </div>
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete this category?</h5>
            <p class="card-text">
                <strong>Category Name:</strong> @Model.category.Name
            </p>
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>
                Warning: This action cannot be undone. All movies associated with this category may be affected.
            </div>
            <form method="post">
                <input type="hidden" asp-for="category.Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                    <a class="btn btn-outline-secondary" asp-page="./ManageCategories">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>