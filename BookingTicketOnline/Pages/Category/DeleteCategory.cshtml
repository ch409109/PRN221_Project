@page
@model BookingTicketOnline.Pages.Category.DeleteCategoryModel
@{
    Layout = "_AdminLayout";
}

<div class="container my-5" style="max-width: 600px">
    <h2 class="text-center mb-4">Edit Category</h2>
    <form>
        <input hidden type="text" class="form-control" placeholder="1">
        <div class="mb-3">
            <label for="username" class="form-label">Name</label>
            <input type="text" class="form-control" id="username" placeholder="Enter category name" required>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger" asp-page="/Category/ManageCategories">Delete</button>
            <a type="button" class="btn btn-outline-secondary" asp-page="/Category/ManageCategories">Cancel</a>
        </div>
    </form>
</div>
